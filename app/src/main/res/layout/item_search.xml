<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY"
        android:id="@+id/imagebaihatSearch"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxWidth="250dp"
        android:layout_margin="5dp"
        android:layout_marginTop="7dp"
        android:text="Tên bài hát"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imagebaihatSearch"
        android:id="@+id/txttensearch"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Ca sĩ"
        android:layout_below="@id/txttensearch"
        android:layout_toRightOf="@id/imagebaihatSearch"
        android:textColor="#7b7878"
        android:textSize="16sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:id="@+id/txttencasisearch"
        android:maxWidth="250dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="20dp"
        android:src="@drawable/iconlove"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/imageviewluotthichsearch"
        android:layout_marginRight="10dp"
        android:layout_height="20dp" />

</RelativeLayout>