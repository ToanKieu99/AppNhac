<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textplayindex"
            android:layout_margin="10dp"
            android:text="1"
            android:textColor="#fff"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textviewtenbaihat"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textplayindex"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="Tên ca Khúc"
            android:textColor="#fff"
            android:textSize="17sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textviewPlaytencasi"
            android:layout_below="@id/textviewtenbaihat"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textplayindex"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Tên ca sĩ"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>