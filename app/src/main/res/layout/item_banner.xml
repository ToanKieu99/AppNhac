<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageviewbackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY" />


    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/custom_backgroun_banner" />

    <RelativeLayout
        android:id="@+id/relati1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageviewbackgroundbanner">

        <ImageView
            android:id="@+id/imageviewbanner"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textviewTitlebannerbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageviewbanner"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageviewbanner"
            android:text="Lỡ yêu mất rồi"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewTitlebannerbaihat"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/imageviewbanner">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                android:id="@+id/textviewnnoidung"
                android:textColor="#fff"
                android:text="Chào bạn đến vs ca khúc mới của ca sĩ mới nhất hiện nay"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>