<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/textviewTitlePlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="NHỊP ĐIỆU CẢM SÚC"
        android:textColor="#000"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/listviewPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewTitlePlaylist" />

    <TextView
        android:layout_below="@id/listviewPlaylist"
        android:paddingLeft="5dp"
        android:drawablePadding="10dp"
        android:textSize="19sp"
        android:text="Xem thêm PlayList"
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:id="@+id/textviewviewmoreplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#ded1cc"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#0a0a0a" />


</RelativeLayout>