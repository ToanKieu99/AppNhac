<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TimKiem_Activity">

    <android.support.v7.widget.CardView
        android:id="@+id/carview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarlayoutsearchbaihat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <ImageView
                    android:id="@+id/imgthoat"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_back_black_24dp" />

                <android.support.v7.widget.Toolbar
                    android:layout_marginLeft="5dp"
                    android:id="@+id/toolbarsearchbaihat"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize" />
            </LinearLayout>


        </android.support.design.widget.AppBarLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclervewsearchbaihat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/carview" />


    <TextView
        android:id="@+id/txtsearchKhongcodulieu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Không có dữ liệu bài hát"
        android:textColor="#b40000"
        android:textSize="35sp"
        android:visibility="gone" />

</RelativeLayout>